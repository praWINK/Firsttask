.col-lg-3
.col-lg-6
  = form_for([@question, @answer]) do |f|
    - answer_error_messages!
    .field
      = f.label :answers
      %br/
      = f.text_area :answer, cols: "60", rows: "10"
      %br/
    .actions
      = f.submit "Create Answer", :class => "btn btn-primary"
      = link_to 'Back', root_path
