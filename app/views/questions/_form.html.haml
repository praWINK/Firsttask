.col-lg-3
.col-lg-6
  = form_for(@question) do |f|
    - question_error_messages!
    .field
      = f.label :question
      %br/
      = f.text_area :content, cols: "60", rows: "10"
      %br/
    .actions
      = f.submit "Create Question", :class => "btn btn-primary"
      = link_to 'Show', @question
      = link_to 'Back', root_path
.col-lg-3






