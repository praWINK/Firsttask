= form_for(@question) do |f|
  - if @question.errors.any?
    #error_explanation
      %h2
        = pluralize(@question.errors.count, "error")
        prohibited this question from being saved:
      %ul
        - @question.errors.full_messages.each do |message|
          %li= message
  .center
    .field
      = f.label :question
      %br/
      = f.text_area :content, cols: "60", rows: "10"
      %br/
    .actions
      = f.submit "Create Question", :class => "btn btn-primary"
      %br
      = link_to 'Show', @question
      = link_to 'Back', new_question_path



